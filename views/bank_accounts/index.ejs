
<!DOCTYPE html>
<html>
<head>
  <title>Visualizar Clientes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <table>
    <thead>
      <tr><th>Teléfono</th><th>Banco</th><th>Acción</th></tr>
    </thead>
    <tbody>
      <% bank_accounts.forEach(a => { %>
        <tr>
          <td><%= a.phone_number %></td>
          <td><%= a.bank_name %></td>
          <td>
            <a href="/bank_accounts/<%= a.phone_number %>">Ver detalle</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  
  <% if (typeof error !== 'undefined' && error === 'relacion') { %>
    <!-- Modal Bootstrap -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content border-danger">
          <div class="modal-header bg-danger text-white">
            <h5 class="modal-title" id="errorModalLabel">Acción no permitida</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
          </div>
          <div class="modal-body">
            Este usuario no puede ser eliminado porque tiene tareas asignadas.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Entendido</button>
          </div>
        </div>
      </div>
    </div>
  <% } %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <% if (typeof error !== 'undefined' && error === 'relacion') { %>
    <script>
      const myModal = new bootstrap.Modal(document.getElementById('errorModal'));
      myModal.show();
    </script>
  <% } %>
</body>
</html>

